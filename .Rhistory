//Import data
student_academic_performance <- read.csv("C:/Users/User/Desktop/student_academic_performance.csv")
View(student_academic_performance)

//install & load Packages
install.packages(c("tidyverse","skimr","DataExplorer","corrplot"))
library(tidyverse)
library(skimr)
library(DataExplorer)
library(corrplot)

//checking collum and names
head(student_academic_performance)
str(student_academic_performance)
summary(student_academic_performance)
names(student_academic_performance)

//checking if there any missing value
colSums(is.na(student_academic_performance))
colMeans(is.na(student_academic_performance))*100
//there is missing value, thus need to fix it

//clean missing value by replace numeric columns with median
student_academic_performance$Study.Time.per.Week[
is.na(student_academic_performance$Study.Time.per.Week)
] <- median(student_academic_performance$Study.Time.per.Week, na.rm = TRUE)
student_academic_performance$Daily.Sleep.Duration[
is.na(student_academic_performance$Daily.Sleep.Duration)
] <- median(student_academic_performance$Daily.Sleep.Duration, na.rm = TRUE)
student_academic_performance$Math.Score[
is.na(student_academic_performance$Math.Score)
] <- median(student_academic_performance$Math.Score, na.rm = TRUE)
student_academic_performance$Reading.Score[
is.na(student_academic_performance$Reading.Score)
] <- median(student_academic_performance$Reading.Score, na.rm = TRUE)
student_academic_performance$Writing.Score[
is.na(student_academic_performance$Writing.Score)
] <- median(student_academic_performance$Writing.Score, na.rm = TRUE)

// replace categorical colums with mode
mode_value <- function(x){
names(sort(table(x), decreasing = TRUE))[1]
}
student_academic_performance$Lunch.Type[
is.na(student_academic_performance$Lunch.Type)
] <- mode_value(student_academic_performance$Lunch.Type)

//check if there any missing value
colSums(is.na(student_academic_performance))

//peforming basic statistic
summary(student_academic_performance)
skim(student_academic_performance)

//score distribution 
ggplot(student_academic_performance, aes(x = Math.Score)) +
geom_histogram(binwidth = 5, fill = "blue")
ggplot(student_academic_performance, aes(x = Reading.Score)) +
geom_histogram(binwidth = 5, fill = "green")

//Gender vs Score
ggplot(student_academic_performance, aes(x = Gender, y = Math.Score, fill = Gender)) +
geom_boxplot()
ggplot(student_academic_performance, aes(x = Gender, y = Reading.Score, fill = Gender)) +
geom_boxplot()

//lunch type vs Score
ggplot(student_academic_performance, aes(x = Lunch.Type, y = Math.Score, fill = Lunch.Type)) +
geom_boxplot()
ggplot(student_academic_performance, aes(x = Lunch.Type, y = Reading.Score, fill = Lunch.Type)) +
geom_boxplot()

//study time vs score
ggplot(student_academic_performance, aes(x = Study.Time.per.Week, y = Math.Score)) +
geom_point() +
geom_smooth(method = "lm")
ggplot(student_academic_performance, aes(x = Study.Time.per.Week, y = Reading.Score)) +
geom_point() +
geom_smooth(method = "lm")

//correlation
num_data <- student_academic_performance %>%
select(Study.Time.per.Week,
Daily.Sleep.Duration,
Math.Score,
Reading.Score,
Writing.Score)
cor_matrix <- cor(num_data, use = "complete.obs")
corrplot(cor_matrix, method = "circle")

//group analysis
student_academic_performance %>%
group_by(Gender) %>%
summarise(mean_math = mean(Math.Score))

//average score by school type
student_academic_performance %>%
group_by(School.Type) %>%
summarise(mean_reading = mean(Reading.Score))
